
@import '../../base/_mixins.styl'

header
	width 100%
	height 60px
	background #fff
	box-shadow 1px 2px 18px rgba(0,0,0,.1)
	display flex
	align-items center
	position sticky
	top 0
	z-index 2
.brandLogo
	width 200px
	padding 8px 0
	color #101832
	font-size 20px
	font-weight 700
	img
		width auto
.mainNav
	width calc(100% - 200px)
	display flex
	align-items center
	justify-content flex-end
	font-size 13px
.burgerBlock
	width 45px
	height 45px
	display flex
	align-items center
	justify-content center
	background #f6f6f6
	border-radius 5px
	+minWidth(medium)
		background transparent
.burger
	width 22px
	height 20px
	cursor pointer
	transition-property transform,opacity
	transition-duration .3s
	&.isOpen
		transform rotate(-90deg)
		.bLayer.left
			width 15px
			transform rotate(45deg) translate(9px,-7px)
		.bLayer.right
			width 15px
			transform rotate(-45deg) translate(9px,7px)
.bLayer
	width 22px
	height 3px
	background #333
	position relative
	margin 3px 0
	transition-property transform
	transition-duration .3s
.git
	img
		max-width 26px