
@import '../base/_mixins.styl'

.banner
	width 100%
	display flex
	align-items flex-start
	+minWidth(medium)
		height 320px
		margin 60px 0
		align-items center
.intro
	margin-right 20px
	flex 2 1
	+minWidth(medium)
		margin-right 70px
	h1
		font-size 3.5rem
		color #101832
		margin-top 0
		+minWidth(medium)
			font-size 4.5rem
	p
		color #777
		font-size 18px
		line-height 1.5
		+minWidth(medium)
			font-size 20px
.avatar
	display flex
	align-items center
	justify-content center
	+minWidth(medium)
		flex 1 1
	img
		max-width 70px
		+minWidth(medium)
			max-width 100%