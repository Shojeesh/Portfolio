
@import 'base/_mixins.styl'

@import 'components/_banner.styl'

.works
	width 100%
	margin 20px 0
	+minWidth(medium)
		margin 85px 0
	h2
		font-size 22px
		+minWidth(medium)
			font-size 26px
.workCard
	width 100%
	height 245px
	border-radius 15px
	overflow hidden
	position relative
	user-select none
	&:hover
		img
			transform scale(1.1)
		.wcOverlay
			opacity 1
	img
		width 100%
		height 245px
		object-fit cover
		transition all 0.4s
.wcOverlay
	width 100%
	height 100%
	background #101832
	padding 20px
	position absolute
	top 0
	left 0
	opacity 0
	transition all 0.7s ease-in-out
	display flex
	flex-direction column
	align-items center
	justify-content center
.wcDesc
	font-size 20px
	color #fff
	font-weight 600
	margin-bottom 20px
.buttonField
	margin 20px 0
	+minWidth(medium)
		margin 45px 0
.mwBlock
	width 100%
	margin 35px 0
	position relative
	opacity 0
	pointer-events none
	top -100%
	transition all 0.5s
	height 0
	overflow hidden
	&.isOpen
		top 0
		opacity 1
		pointer-events auto
		height auto
.mwRow
	display flex
	align-items center
	padding 15px 15px
	flex-wrap wrap
	&:hover
		background #f2f2f2
	&+.mwRow
		border-top solid 1px #ddd
.mwLogo
	width 30px
	img
		max-width 100%
.mwDesc
	width 100%
	font-weight 600
	color #777
	padding 10px 0
	+minWidth(medium)
		width calc(100% - 165px)
		padding 0 25px
	h4
		margin-top 0
		margin-bottom 5px
		font-size 1.6rem
		color #222
	p
		margin 0
		&+p
			margin-top 5px
.mwAction
	width 135px
.mwlTag
	width 30px
	height 30px
	border-radius 50%
	background #777
	display flex
	align-items center
	justify-content center
	font-size 1.6rem
	font-weight 600
	color #fff
	opacity 0.6
	line-height 1